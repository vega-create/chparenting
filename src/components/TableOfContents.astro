    </h2>
    <ol class="space-y-2">
      {h2Headings.map((heading, i) => (
        <li>
          <a
            href={`#${heading.slug}`}
            class="text-sm text-warmgray-500 hover:text-peach-500 transition-colors flex items-center gap-2"
          >
            <span class="text-peach-400/60 font-display text-xs">{String(i + 1).padStart(2, '0')}</span>
            {heading.text}
          </a>
        </li>
      ))}
    </ol>
  </nav>
)}
