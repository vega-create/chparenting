---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;
const h2Headings = headings.filter(h => h.depth === 2);
---

{h2Headings.length > 0 && (
  <nav class="bg-warmgray-100/70 rounded-2xl p-6 mb-10 border border-warmgray-200/50">
    <h2 class="font-display font-bold text-warmgray-700 mb-3 flex items-center gap-2">
