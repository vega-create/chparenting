---
interface FAQ {
  q: string;
  a: string;
}

interface Props {
  faqs: FAQ[];
}

const { faqs } = Astro.props;

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a,
    },
  })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
