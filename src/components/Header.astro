---
import { siteConfig } from '../site.config';

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-cream/92 backdrop-blur-xl border-b-2 border-dashed border-warmgray-200">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <img src="/images/logo.png" alt="Mom Life Recovery Lab" class="h-10 sm:h-12 w-auto" />
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-1">
        {siteConfig.nav.map((item) => (
          <a
            href={item.href}
            class:list={[
              'px-3 py-1.5 rounded-xl text-sm font-medium transition-all duration-300',
              currentPath === item.href
                ? 'bg-peach-400/15 text-peach-500'
                : 'text-warmgray-500 hover:bg-peach-400/10 hover:text-peach-400',
            ]}
          >
            <span class="mr-1">{item.emoji}</span>
            {item.text}
          </a>
        ))}
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden p-2 rounded-xl hover:bg-peach-400/10 transition-colors"
        aria-label="選單"
      >
        <svg class="w-6 h-6 text-warmgray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Nav -->
  <div id="mobile-menu" class="hidden lg:hidden border-t-2 border-dashed border-warmgray-200 bg-cream/95 backdrop-blur-xl">
    <nav class="max-w-6xl mx-auto px-4 py-4 flex flex-col gap-1">
      {siteConfig.nav.map((item) => (
        <a
          href={item.href}
          class:list={[
            'px-4 py-3 rounded-xl text-sm font-medium transition-all',
            currentPath === item.href
              ? 'bg-peach-400/15 text-peach-500'
              : 'text-warmgray-500 hover:bg-peach-400/10',
          ]}
        >
          <span class="mr-2">{item.emoji}</span>
          {item.text}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
